  $vars ['cp_toolbar'] = $vars ['cp_left'] = '';
  
  $vsite = vsite_get_vsite ();
  $user_tb_setting = ($vsite && is_array ( $vsite->settings ) && is_array ( $vsite->settings ['generic'] ) && array_key_exists ( 'admin_menu', $vsite->settings ['generic'] )) ? TRUE : FALSE;
  
  if (context_get ( 'toolbar', 'value' )) {
    if ($user_tb_setting) {
      $links = cp_toolbar_menu_links ();
      $links = theme ( 'cp_toolbar', $links );
      $vars ['cp_toolbar'] = $links;
      
      $vars ['body_classes'] .= ' cp-toolbar-on';
    
    } else {
      global $user;
      $user_links = array ();
      $user_links[] = array('title' => 'admin', 'href' => 'cp/features');
      $user_links [] = array (
        'title' => t ( 'Hello <strong>!username</strong>', array (
        '!username' => $user->name 
      ) ), 'href' => 'user', 'html' => TRUE 
      );
      $user_links [] = array (
        'title' => t ( 'Logout' ), 'href' => "logout" 
      );
      $vars ['cp_toolbar'] = $vars ['cp_toolbar'] = theme('links', $user_links);
    }
  
  }
  
  if (context_get ( 'scholar', 'section' ) == 'cp') {
    $links = cp_toolbar_menu_links ();
    $links = theme ( 'cp_toolbar', $links );
    $vars ['cp_toolbar'] = $links;
    //$links = cp_left_menu_links ();
    //$vars ['cp_left'] = theme ( 'links', $links );
