function cp_init(){
   $vsite = vsite_get_vsite();
   $toolbar = FALSE;

   
   // cp nice buttons 
   if (arg(0) == 'cp'){
     drupal_add_css(drupal_get_path('module', 'cp') .'/theme/cp_nice_buttons.css');
     //Defer it in the footer so that it has last say at the buttons
     drupal_add_js(drupal_get_path('module', 'cp') . '/theme/cp_nice_buttons.js','module','footer',true);
   }

   // define some contexts (TODO can we group them all together in scholar.module ?
   
   // controlcp context
  if (arg(0) == 'cp' || (arg(0) == 'node' && (arg(1) == 'add' || arg(2) == 'edit'))) {
    context_set('scholar', 'section', 'cp');
    $toolbar = TRUE;
    // since we are here .. initialize cp theme
    _cp_init_theme();
  }
  
  else {
  	if ($vsite){
  	  context_set('scholar', 'section', 'vsite');
  	  og_set_theme($vsite -> group); // TODO why dont you get it from space settings
  	  
  	  if ($vsite -> admin_access()){
  	    $toolbar = TRUE;
  	  }
  	}
  }
  
  if ($toolbar){
   drupal_add_css(drupal_get_path('module', 'cp') .'/theme/cp-toolbar.css');
  }
  
  context_set('toolbar', 'value', $toolbar);
}

