<?php

function os_modalframe_install() {
  db_query("UPDATE {system} SET weight = 100 WHERE name = 'os_modalframe'");

  // migrate existing blocks to new boxes
  module_load_include('module', 'boxes');
  $siteinfo = boxes_factory('os_boxes_modal_siteinfo');
  $sitelogo = boxes_factory('os_boxes_modal_sitelogo');
  module_load_include('inc', 'os_boxes', 'os_boxes.newbox_api');
  replace_boxes('scholar-0', $sitelogo, 'header_left');
  replace_boxes('scholar-1', $siteinfo, 'header_main');
}