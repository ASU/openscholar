function simport_set_generic($old, &$new){

  //get new og (site id). I am assuming here that there is only one og per node.
  $space_nid = db_result(db_query("SELECT new FROM {simport} WHERE old = %d", $old -> og_groups[0]));
  
  //TODO: to expensive?? should I store user uid mapping in table?
  $space = spaces_load ( 'og', $space_nid, TRUE );

  //set the generic node data
  $new -> title = $old -> title;
  $new -> status = $old -> status;
  $new -> created = $old -> created;
  $new -> changed = $old -> changed;
  $new -> uid = $space -> group -> uid;
  $new -> name = $space -> group -> name;
  $new -> og_groups [0] = $old -> og_groups[0]; //double check on this
  
}

