<?php

function scholarfront_init() {
   drupal_add_css(drupal_get_path('module', 'scholarfront') .'/theme/scholarfront.css');
   }

function scholarfront_menu(){
  $items = array();
  $items["scholarcp/settings/frontpage"] = array(
    'title' => 'Front page',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('scholarcp_frontpage_form'),
    'access callback' => 'spaces_admin_access',
    'access arguments' => array('og', 'features'),
    'file' => 'scholarfront.pages.inc',
  );
  
  
  return $items;
}

