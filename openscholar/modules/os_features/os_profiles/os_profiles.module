/**
 * Submit handler; Importing person profile from external source.
 */
function os_profiles_sync_profile_submit($form, $form_state) {
  $keys = os_profiles_profiles_fields();

  $values = array();

  if (!empty($form_state['values']['url'])) {
    $update_mode = 'remote';
    $json_address = $form_state['json_address'];
    $values = os_profile_get_remote_values($json_address);
  }
  else {
    $update_mode = 'local';
    // @todo: is this the right way to get the value from autocomplete field ?
    preg_match("/.+\((\d+)\)/", $form_state['values']['autocomplete'], $matches);
    $source_nid = $matches[1];
    $values = os_profile_get_local_values($source_nid);
  }

  if ($destination_profile = os_profile_handle_local_profile($values)) {
    $params = array(
      '@title' => $destination_profile->title,
      '@url' => url('node/' . $destination_profile->nid),
    );
    drupal_set_message(t('The person @title has synced. You can <a href="@url">visit</a> their page.', $params));

    // Need to update the source for future sync
    // Should be in a multivalue field
    os_profiles_create_identifier($destination_profile);
    if ($update_mode == 'local') {
      os_profiles_local_update_identifier_listener($destination_profile, $source_nid);
    }
    else {
      os_profiles_remote_update_identifier_listener($destination_profile, $json_address);
    }
  }
}

function os_profile_handle_local_profile($values) {
  $result = FALSE;

  if ($destination_nid = os_profiles_get_local_profile($values['title'])) {
    $method = 'update';
    $arguments = array($destination_nid, $values);
  }
  else {
    $method = 'create';
    $arguments = array($values);
  }

  $handler = restws_resource_controller('node');

  $nid = call_user_func_array(array($handler, $method), $arguments);

  if ($method == 'update') {
    $nid = $arguments[0];
  }

  // @todo: drupal_set_message on failure/success ?
  return node_load($nid);
}

/**
 * Get existing local profile based on title.
 *
 * @param $title
 *   Profile title.
 *
 * @return
 *   Node id for existing profile, FALSE otherwise
 */
function os_profiles_get_local_profile ($title) {
  $result = FALSE;
  $query = new EntityFieldQuery();
  $query
    ->entityCondition('entity_type', 'node')
    ->propertyCondition('title', $title)
    ->propertyCondition('type', 'person')
    ->range(0, 1);

  if (module_exists('vsite') && $vsite = vsite_get_vsite()) {
    $query->fieldCondition(OG_AUDIENCE_FIELD, 'target_id', $vsite->id);
  }

  $response = $query->execute();

  if (!empty($response)) {
    $result = reset($response['node'])->nid;
  }
  return $result;
}

function os_profile_get_remote_values ($url) {
  $values = array();
  $values['type'] = 'person';

  $request = drupal_http_request($json_address);
  $data = drupal_json_decode($request->data);
  foreach ($keys as $key) {
    if (empty($data[$key])) {
      continue;
    }
    $values[$key] = $data[$key];
  }

  return $values;
}

function os_profile_get_local_values ($source_nid) {
  $values = array();
  $values['type'] = 'person';

  $source_profile = entity_metadata_wrapper('node', $source_nid);
  foreach ($keys as $key) {
    if (isset($source_profile->{$key}) && $value = $source_profile->{$key}->value()) {
      $values[$key] = $value;
    }
  }

  return $values;
}

/**
 * Posting the new node object to listeners.
 *
 * @param $node
 *  The node object.
 * @param $url
 *  array of urls of the listeners.
 */
function os_profiles_send_node_to_listeners($node, $url) {
  $wrapper = entity_metadata_wrapper('node', $node);
  $fields = os_profiles_profiles_fields();
  $values = array();

  foreach ($fields as $field) {
    if (!isset($wrapper->{$field})) {
      continue;
    }

    $values[$field] = $wrapper->{$field}->value();
  }
/*
 *     // Build the URL for import and verify for response code 200 from the URL.
    $result = drupal_http_request($wrapper->field_rss_url->value());

    if ($result->code != 200) {
      // oops... error!
      drupal_set_message(t('Unable to get feeds from: @url', array('@url' => $wrapper->field_rss_url->value())));
      return new FeedsFetcherResult('<xml></xml>');
    }

    return new FeedsFetcherResult($result->data);
 */
  $query = drupal_http_build_query($values);
  $ch = curl_init();

  // Set post information for the CURL call.
  curl_setopt($ch,CURLOPT_URL, $url);
  curl_setopt($ch,CURLOPT_POST, count($fields));
  curl_setopt($ch,CURLOPT_POSTFIELDS, $query);

  // Execute the CURL call.
  curl_exec($ch);

  // Close the CURL.
  curl_close($ch);
}
