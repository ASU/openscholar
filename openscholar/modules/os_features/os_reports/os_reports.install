/**
 * Implements hook_install().
 */
function os_reports_install() {
  $roles = user_roles();
  $report_rid = array_search("os report admin", $roles);
  if ($report_rid) {
    $report_perms = array(
      'OS Reports' => array(
        'access os reports',
      ),
    );
    user_role_grant_permissions($report_rid, $report_perms);
  }
}