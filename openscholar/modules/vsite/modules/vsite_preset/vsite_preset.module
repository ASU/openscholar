/**
 * Implements hook_og_tasks_info().
 */
function vsite_preset_og_tasks_info($entity_type, $entity) {
  $tasks = array();
  $path = drupal_get_path('module', 'vsite_preset');
  // @fixme we should be able to load this via files[]  array in vsite_preset.info
  include_once($path . '/includes/vsite_task.inc');

  // Provides task for 'News & Events'.
  $task = array(
    'title' => t('News & Events Section'),
    'description' => t('Sets up a standard News & Events site section.'),
    'required' => TRUE,
    'callback' => '_vsite_preset_section_newsevents_task',
    'file' => $path . '/includes/menu.inc',
    'completed' => _vsite_preset_section_newsevents_completed($entity),
  );
  $tasks['vsite_preset_section_newsevents'] = new vsite_task($task);

  // Provides task for 'About Section'.
  $task = array(
    'title' => t('About Section'),
    'description' => t('Sets up standard template for an About section.'),
    'required' => TRUE,
    'callback' => '_vsite_preset_section_task',
    'arguments' => array('title' => t('About')),
    'file' => $path . '/includes/menu.inc',
    'completed' => _vsite_preset_section_about_completed($entity),
  );
  $tasks['vsite_preset_section_about'] = new vsite_task($task);

  // Provides task for 'HOME'.
  $task = array(
    'title' => t('HOME Section'),
    'description' => t('Sets up standard template for a HOME section.'),
    'required' => TRUE,
    'callback' => '_vsite_preset_section_home_task',
    'file' => $path . '/includes/menu.inc',
    'completed' => _vsite_preset_section_home_completed($entity),
  );
  $tasks['vsite_preset_section_home'] = new vsite_task($task);

  // Provides task for 'Academics'.
  $task = array(
    'title' => t('Academics Section'),
    'description' => t('Sets up standard template for a Academics section.'),
    'required' => TRUE,
    'callback' => '_vsite_preset_section_task',
    'arguments' => array('title' => t('Academics')),
    'file' => $path . '/includes/menu.inc',
    'completed' => _vsite_preset_section_academics_completed($entity),
  );
  $tasks['vsite_preset_section_academics'] = new vsite_task($task);

  // @todo more tasks for more presets.

  return $tasks;
}

/**
 * Task completed callback for News & Events page section and menu.
 */
function _vsite_preset_section_newsevents_completed($entity) {
  // @todo verify that all page nodes and menu items have been created.
  return FALSE;
}

/**
 * Task completed callback for the 'About Section' task.
 */
function _vsite_preset_section_about_completed($entity) {
  // @todo verify that all page nodes, menu items and widgets have been created.
  return FALSE;
}

/**
 * Task completed callback for the 'HOME Section' task.
 */
function _vsite_preset_section_home_completed($entity) {
  // @todo verify that all page nodes, menu items and widgets have been created.
  return FALSE;
}

/**
 * Task completed callback for the 'Academic Section' task.
 */
function _vsite_preset_section_academics_completed($entity) {
  return FALSE;
}
