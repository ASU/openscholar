<?php

function os_common_library() {
  $info = array();

  $path = drupal_get_path('os_common');
  $rest = url('api', array('alias' => true));

  $info['angularjs'] = array(
    'title' => 'AngularJS',
    'js' => array(
      'https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.js' => array('type' => 'external')
    )
  );

  $info['JSPager'] = array(
    'title' => 'JS Pager',
    'js' => array(
      $path.'/JSPager/JSPager.module.js' => array(),
      array(
        'type' => 'setting',
        'data' => array(
          'paths' => array(
            'JSPager' => $path.'/JSPager',
          )
        )
      )
    ),
    'dependencies' => array(
      array('os_common', 'angularjs'),
    )
  );

  $info['EntityService'] = array(
    'title' => 'EntityService',
    'js' => array(
      $path.'/EntityService/EntityService.module.js' => array(),
      array(
        'type' => 'setting',
        'data' => array(
          'paths' => array(
            'api' => $rest
          )
        )
      )
    ),
    'dependencies' => array(
      array('os_common', 'angularjs'),
    )
  );

  return $info;
}