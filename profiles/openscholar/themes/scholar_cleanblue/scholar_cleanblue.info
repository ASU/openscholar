name        = Clean Blue
description = Clean theme with blue and grey colors.
core        = 7.x
engine      = phptemplate
screenshot  = screenshot.png
base theme  = os_basetheme
flavor_name = "Blue"
plugins[os][flavor] = flavors


stylesheets[all][]   = css/scholar_cleanblue.css
conditional-stylesheets[if lte IE 7][all][]   = css/scholar_cleanblue-ie7.css
conditional-stylesheets[if IE][all][]         = css/scholar_cleanblue-ie.css

os[theme_type]   = "vsite"
os[theme_access] = "public"

;----------// Regions
  regions[sidebar_first] = Sidebar first
  regions[sidebar_second] = Sidebar second
  regions[content]  = Main Content
  regions[menu_bar]  = Menu Bar
  regions[footer] = Footer
  regions[header_left] = Header Left
  regions[header] = Header Main
  regions[header_right] = Header Right
  
  ;----------// Theme Settings

  ; Layout settings

  ; Standard bigscreen
   settings[bigscreen_layout]         = 'three-col-grail'
   settings[bigscreen_page_unit]      = 'px'
   settings[bigscreen_sidebar_unit]   = 'px'
   settings[bigscreen_max_width_unit] = 'px'
   settings[bigscreen_page_width]     = 100
   settings[bigscreen_sidebar_first]  = 160
   settings[bigscreen_sidebar_second] = 195
   settings[bigscreen_set_max_width]  = 1
   settings[bigscreen_max_width]      = 980
